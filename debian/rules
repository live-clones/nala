#!/usr/bin/make -f
export DEB_BUILD_MAINT_OPTIONS = hardening=+all
export PYBUILD_NAME = nala
export DH_VERBOSE = 1
%:
	dh $@ --with python3 --buildsystem=pybuild

execute_before_dh_installman:
	pandoc docs/nala.8.md \
	--standalone \
	--from markdown \
	--to man | gzip -c > docs/nala.8.gz

override_dh_auto_install:
	python3 setup.py install --root=$(CURDIR)/debian/nala/ --install-layout=deb

override_dh_auto_clean:
	python3 setup.py clean -a
	rm -rf .pybuild __pycache__ nala/__pycache__ nala.egg-info docs/nala.8.gz
