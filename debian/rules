#!/usr/bin/make -f
export DEB_BUILD_MAINT_OPTIONS = hardening=+all
export PYBUILD_NAME = nala
export DH_VERBOSE = 1
%:
	dh $@ --buildsystem=pybuild

execute_before_dh_installman:
	pandoc docs/nala.8.md \
	--standalone \
	--from markdown \
	--to man > docs/nala.8

override_dh_auto_install:
	python3 setup.py install --root=$(CURDIR)/debian/nala/ --install-layout=deb
